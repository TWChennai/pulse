<html>
<head>
<%=stylesheet_link_tag :all, :cache => true%>
<%=javascript_include_tag 'jquery', :cache => true%>
<%=javascript_include_tag 'jquery.dataTables.min', :cache => true%>
<script type="text/javascript" charset="utf-8"> 
$(document).ready(function() {
	$('#iterations').dataTable();
});
</script>
</head>
<body>
	<div class="main">
		<div class="header">
			<div class="logo"> <img src="/images/logo.jpg" width=150 height=100/> </div>
