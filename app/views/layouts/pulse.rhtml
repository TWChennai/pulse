				<ul>
					<li><a href="/" class="selected"> Dashboard </a> </li>
					<li><%=link_to "Create New Project", create_project_path%></li>							
				</ul>
			</div>
		</div>
		<div class="clear"/>
		<div class="content">
			<div class="left_area"> 
				<%=yield%>
			</div>
			<div class="right_area">
			</div>
			<div class="projects_list_pane">
				<%=render :partial=>'/project/project_list'%>
			</div>
		</div>
		<div class="clear" />
		<div class="footer">
			&copy; <a href="http://www.thoughtworks.com">Thoughtworks</a>. All Rights Reserved
		</div>
	</div>
