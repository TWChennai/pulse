<div class="project_risks">
    <h3>Project Risks</h3>
    <%= link_to_if @project.isAlive, "Add New Risk", new_risk_path(@project, :height => "400", :width => "800"), :class => "thickbox", :title => "Add New Risk" %>
    <table class="iteration">
        <thead>
        <tr>
            <% ProjectTemplate.user_input_risk_types_from_json.each do |risk| %>
                <th><%= risk["name"] %></th>
            <% end %>
            <th>No of Days open</th>
            <th>Actions</th>
        </tr>
        <thead>
        <tbody>
        <% @project.risks.each_with_index do |risk,index| %>
          <tr class="<%= risk["impact"].downcase %>">
                <% ProjectTemplate.user_input_risk_types_from_json.each do |risk_type| %>
                    <td><%= risk[risk_type["key"]] %></td>
                <% end %>
                <td><%= risk.days_open %></td>
                <td><%= link_to_if @project.isAlive, "Edit", edit_risk_path(:project_id => @project.id, :index => index, :width => "1000", :height => "600"), :class => "thickbox", :title => "Edit Risk and Show History"%></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
