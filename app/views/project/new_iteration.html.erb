<% form_tag save_iteration_path(@project) do %>
<table>
	<tbody>
		<tr>
			<td>Week Ending Date</td>
			<td><%= text_field "iteration", "date", {:class=>"datepicker"} %></td>
		</tr>
		<% @project.stuffed_metrics.each do |metric| %>
		<tr>
			<td><%= label metric["key"], metric["name"] %></td>
			<td><%= select_tag "iteration[metrics][#{metric['key']}]", options_for_select(["Red", "Green", "Amber"]) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= submit_tag "Add Iteration Information"%>
<% end %>

<script type="text/javascript">
	$(".datepicker").datepicker();
</script>