<div class="project_risks">
    <h3>Project Risks</h3>
    <%= link_to_if @project.isAlive, "Add New Risk", new_risk_path(@project, :height => "400", :width => "800"), :class => "thickbox", :title => "Add New Risk" %>
    <table class="iteration">
        <thead>
        <tr>
          <th>Risk Description</th>
          <th>State</th>
          <th>Impact</th>
          <th># of days</th>
          <th>Probability of occurrence</th>
        </tr>
        <thead>
        <tbody>
        <% @project.risks.each_with_index do |risk,index| %>
          <tr class="<%= risk["impact"].downcase %>">
                <td><%= link_to_if @project.isAlive, risk["risk_description"], edit_risk_path(:project_id => @project.id, :index => index, :width => "1000", :height => "600"), :class => "thickbox", :title => "Edit Risk and Show History"%></td>
                <td><%= risk["state"] %></td>
                <td><%= risk["impact"] %></td>
                <td><%= risk.days_open %></td>
                <td><%= risk["probability_of_occurrence"] %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
